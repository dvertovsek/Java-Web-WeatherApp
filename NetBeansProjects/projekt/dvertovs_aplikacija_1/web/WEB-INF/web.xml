<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>konfiguracija</param-name>
        <param-value>NWTiS.dvertovs.db.config.xml</param-value>
    </context-param>
    <context-param>
        <param-name>konfiguracijaApp</param-name>
        <param-value>konfiguracija-app.txt</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>nwtis.dvertovs.web.slusaci.ContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>DvertovsAplikacija1WS</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Kontroler</servlet-name>
        <servlet-class>nwtis.dvertovs.web.Kontroler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DvertovsAplikacija1WS</servlet-name>
        <url-pattern>/DvertovsAplikacija1WS</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Kontroler</servlet-name>
        <url-pattern>/Kontroler</url-pattern>
        <url-pattern>/AdminLogin</url-pattern>
        <url-pattern>/ProvjeraKorisnika</url-pattern>
        <url-pattern>/OdjavaKorisnika</url-pattern>
        <url-pattern>/IspisKorisnika</url-pattern>
        <url-pattern>/PregledDnevnikaWS</url-pattern>
        <url-pattern>/PregledDnevnikaSS</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
