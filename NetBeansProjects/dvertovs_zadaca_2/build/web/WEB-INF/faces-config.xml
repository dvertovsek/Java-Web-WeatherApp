<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>org.foi.nwtis.dvertovs.i18n</base-name>
            <var>m</var>
        </resource-bundle>
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>it</supported-locale>
        </locale-config>
    </application>
    <navigation-rule>
        <from-view-id>/slanjePoruke.xhtml</from-view-id>
        <navigation-case>
            <description>
                Ako je pogreška vrati se na pogled i prikaži opis greške.
            </description>
            <from-action>#{slanjePoruke.saljiPoruku()}</from-action>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <description>
                Ako nije pogreška vrati se na pogled i prikaži opis statusa.
            </description>
            <from-action>#{slanjePoruke.saljiPoruku()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>izborJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>slanjePoruke</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pregledPreuzetihPodataka.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>slanjePoruke</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>izborJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <description>
                Ako je pogreška vrati se na pogled i prikaži opis greške.
            </description>
            <from-action>#{pregledPreuzetihPodataka.pregledDatoteke()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/pregledDatoteke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledPreuzetihPodataka.pregledDatoteke()}</from-action>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/pregledPreuzetihPodataka.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>